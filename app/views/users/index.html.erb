<body>

      <main>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
  <tbody>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
</tbody></table>

<div class="row"></div>

      <h2 class="mt-3">New book</h2>
     <%= form_with model: @book do |f| %>
       <p>Title</p>
      <%= f.text_field :title %>
       <p>Opinion</p>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th><% @users.each do |user| %></th>
      <th>image：<%= image_tag user.get_profile_image(100,100) %></th>
      <th>name：<%= user.name %></th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><span><%= link_to "Show", user_path(@user.id) %></span></td>
      </tr>
  </tbody>
</table>


      </main>
    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>



</body>