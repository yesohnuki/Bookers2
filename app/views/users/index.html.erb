<body>

      <main>
        <p id="notice"></p>
        <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
  <tbody>
    <tr>
    <th><%= image_tag @user.get_profile_image(100,100) %></th>
    </tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

<div class="row"></div>

     <%= link_to edit_user_path(@user),class:'col-md-12 btn btn-outline-secondary btn-bock' do %>
     <i class="fas fa-user-cog" ></i>
     <% end %>


      <h2 class="mt-3">New book</h2>
     <%= form_with model: @book do |f| %>
       <p>Title</p>
      <%= f.text_field :title,class: "form-control" %>
       <p>Opinion</p>
      <%= f.text_area :body,class: "form-control" %>
      <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
    <table class="table">
  <thead>
 <tr>
  <th>image</th>
  <th>name</th>
  <th colspan="3"></th>
 </tr>
  </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>

            <td><span><%= link_to "Show", user_path(@user.id) %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </main>
</body>