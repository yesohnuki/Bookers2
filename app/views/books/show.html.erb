  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

<div class="row"></div>

     <%= link_to edit_user_path(@user),class:'col-md-12 btn btn-outline-secondary btn-bock' do %>
     <i class="fas fa-user-cog" ></i>
     <% end %>


      <h2 class="mt-3">New book</h2>
     <%= form_with model: @book_new do |f| %>
       <p>Title</p>
      <%= f.text_field :title,class: "form-control" %>
       <p>Opinion</p>
      <%= f.text_area :body,class: "form-control" %>
      <%= f.submit 'Create Book',class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

    <table class="table">
      <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(80,80) %><br><%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td colspan="3"><%= @book.body %></td>
          <td><%= link_to "Edit",edit_book_path(@book.id)%></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      </tbody>
    </table>
   </div>
  </div>
</div>
